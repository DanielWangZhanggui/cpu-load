<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>addServlet</servlet-name>
    <servlet-class>com.sample.org.controller.addServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>reduceServlet</servlet-name>
    <servlet-class>com.sample.org.controller.reduceServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>getEnvServlet</servlet-name>
    <servlet-class>com.sample.org.controller.getEnvServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>getCpuRatioServlet</servlet-name>
    <servlet-class>com.sample.org.controller.getCpuRatioServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.sample.org.controller.loginServlet</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>addServlet</servlet-name>
    <url-pattern>/servlet/addServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>reduceServlet</servlet-name>
    <url-pattern>/servlet/reduceServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getEnvServlet</servlet-name>
    <url-pattern>/servlet/getEnvServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getCpuRatioServlet</servlet-name>
    <url-pattern>/servlet/getCpuRatioServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/servlet/loginServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
